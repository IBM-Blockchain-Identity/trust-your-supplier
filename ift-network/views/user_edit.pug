extends layout

block content
    .card.mb-3
        h3.card-header.no-top-border Edit a Supplier
        .card-body
            #editUserAlert
            form#editUserForm
                .form-row
                    .form-group.col
                        label(for="createCompanyName") Company Name
                        input#createCompanyName.form-control(type="text" name="company_name" required readonly="readonly")
                .form-row
                    .form-group.col
                        label(for="createUserEmail") Email Address
                        input#createUserEmail.form-control(type="email" placeholder="name@example.com" name="email" required readonly="readonly")
                .form-row
                    .form-group.col
                        label(for="createUserAgentName") Agent URL
                        input#createUserAgentName.form-control(type="text" name="agent_name" required)
                .form-row
                    .form-group.col
                        label(for="createUserTaxID") Tax ID
                        input#createUserTaxID.form-control(type="text" name="tax_id" required)
                hr
                .form-row
                    .col-md-4
                        h4 Address
                    .col-md-8
                        .row
                            .col-md-8
                                .form-group
                                    label(for="editUserAddress1") Address 1
                                    input#editUserAddress1.form-control(type="text" name="address_line_1" required)
                        .row
                            .col-md-8
                                .form-group
                                    label(for="editUserAddress2") Address 2
                                    input#editUserAddress2.form-control(type="text" name="address_line_2" required)
                        .form-row
                            .form-group.col-md-4
                                label(for="editUserCity") City
                                input#editUserCity.form-control(type="text" name="city" required)
                            .form-group.col-md-3
                                label(for="editUserState") State
                                input#editUserState.form-control(type="text" name="state" required)
                            .form-group.col-md-2
                                label(for="editUserZipCode") Zip
                                input#editUserZipCode.form-control(type="text" name="zip_code" required)
                            .form-group.col-md-3
                                label(for="editUserCountry") Country
                                input#editUserCountry.form-control(type="text" name="country" required)
                hr
                .form-row
                    .col-md-4
                        h4 Supplier Info
                    .col-md-8
                      .form-row
                        .form-group.col-md-8
                          label(for="infoMemberID") IFT Network Member ID
                          input#infoMemberID.form-control(type="text" name="member_identifier"  required)
                      .form-row
                        .form-group.col
                          label(for="infoSupplierID") Supplier ID
                          input#infoSupplierID.form-control(type="text" name="supplier_identifier"  required)
                        .form-group.col
                          label(for="createSupplierSince") Supplier Since
                          input#infoSupplierSince.form-control(type="text" name="supplier_since"  required)
                        .form-group.col
                          label(for="createSupplierRating") Supplier Rating
                          input#infoSupplierRating.form-control(type="text" name="supplier_rating"  required)
                      .form-row
                        .form-group.col-md-8
                          label(for="infoTYSID") Trust Your Supplier ID
                          input#infoTYSID.form-control(type="text" name="tys_identifier")
                      .form-row
                        .form-group.col
                          label(for="infoMemberSince") Member Since
                          input#infoMemberSince.form-control(type="text" name="member_since")  
                        .form-group.col
                          label(for="infoTrustValue") Trust Value
                          input#infoTrustValue.form-control(type="text" name="trust_value")
                      .form-row
                        .form-group.col
                          label(for="infoLEI") LEI
                          input#infoLEI.form-control(type="test" name="lei")
                hr
                .d-flex.flex-row-reverse
                    button#editUserButton.btn.btn-primary(type="submit" data-original-text="Update" data-loading-text="<i class='fas fa-circle-notch fa-spin'></i> Updating") Update
                    button#cancelEditUserButton.btn.btn-primary.mr-2(type="button") Cancel

block scripts
    script(src="/javascripts/user_edit.js")