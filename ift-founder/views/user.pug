extends layout

block nav
  .btn-group
    button.btn.btn-danger.delete-account(data-original-text="Delete Account" data-loading-text="<i class='fas fa-circle-notch fa-spin'></i> Deleting") Delete Account
    a.btn.btn-secondary(href='/logout') Logout

block content
  .card.mb-3.pl-4.pr-4
    .card-body
      #personalInfoAlert
      .row
        .col-md-4
          img.img-fluid.d-none.d-md-block(src="https://cdn.corporate.walmart.com/dims4/WMT/c2bbbe9/2147483647/strip/true/crop/2389x930+0+0/resize/1446x563!/quality/90/?url=https%3A%2F%2Fcdn.corporate.walmart.com%2Fd6%2Fe7%2F48e91bac4a8ca8f22985b3682370%2Fwalmart-logos-lockupwtag-horiz-blu-rgb.png")

        .col-md-8
          .form-row
            ol.breadcrumb.bg-white.pl-0
              li.breadcrumb-item
                a(href="/") Home
              li.breadcrumb-item.active My Profile
          .form-row
            h3 Info for: <span class="company-name"></span>
          hr.hr-thick
          .form-row
            .form-group.col
              label(for="userEmail") Email Address
              input#userEmail.form-control(type="email" readonly disabled)
      .row.info-box.pt-3.mt-3
        .col-md-4
          h4 General Info
          .text-center
            img#userPortraitPreview.img-thumbnail(src="" height="200" alt="Profile Image")
        .col-md-8
          .form-row
            .form-group.col
              label(for="infoFirstName") Company Name
              input#infoCompanyName.form-control(type="text" readonly disabled)
          .form-row
            .form-group.col
              label(for="infoUserTaxID") Tax ID
              input#infoUserTaxID.form-control(type="text" name="tax_id" readonly disabled)
      .row.info-box.pt-3.mt-4
        .col-md-4
          h4 Address
        .col-md-8
          .form-row
            .form-group.col-md-8
              label(for="infoAddress1") Address Line 1
              input#infoAddress1.form-control(type="text" disabled readonly)
          .form-row
            .form-group.col-md-8
              label(for="infoAddress2") Address Line 2
              input#infoAddress2.form-control(type="text" disabled readonly)
          .form-row
            .form-group.col-md-4
              label(for="infoCity") City
              input#infoCity.form-control(type="text" disabled readonly)
            .form-group.col-md-3
              label(for="infoState") State
              input#infoState.form-control(type="text" disabled readonly)
            .form-group.col-md-2
              label(for="infoZipCode") Zip
              input#infoZipCode.form-control(type="text" disabled readonly)
            .form-group.col-md-3
              label(for="infoCountry") Country
              input#infoCountry.form-control(type="text" disabled readonly)
      .row.info-box.pt-3.mt-4
        .col-md-4
          h4 Supplier Info
        .col-md-8
          .form-row
            .form-group.col
              label(for="createSupplierID") Supplier ID
              input#infoSupplierID.form-control(type="text" name="supplier_identifier" required)
            .form-group.col
              label(for="createSupplierSince") Supplier Since
              input#infoSupplierSince.form-control(type="text" name="supplier_since" required)
            .form-group.col
              label(for="createSupplierRating") Supplier Rating
              input#infoSupplierRating.form-control(type="text" name="supplier_rating" required)
      hr
      h3 Your Digital Credential
      button#connectWalletButton.btn.btn-primary.mt-3 Click to receive your digital credential
      span#extensionLoaded.d-none.text-muted.ml-3 Chrome extension detected

block extra
  #issuanceModal.modal(tabindex="-1" role="dialog")
    .modal-dialog(role="document")
      .modal-content
        .modal-header
          button.close(type="button" data-dismiss="modal")
            span &times;
        .modal-body
          #issuanceCarousel.carousel.slide(data-ride="false" data-interval="false" data-keyboard="false" data-wrap="false" pause="false")
            .carousel-inner.text-center
              .carousel-item.active
                .d-block.w-100.item-padding.text-primary
                  i.fas.fa-store-alt.fa-10x.mr-3
                  i.fas.fa-sync-alt.fa-7x.mr-3.fa-spin
                  i.fas.fa-mobile-alt.fa-10x
                .carousel-caption
                  h5 Collecting information
                  p We're preparing to issue you a credential.
              .carousel-item
                .d-block.w-100.item-padding.text-primary
                  i.fas.fa-store-alt.fa-10x.mr-3
                  i.fas.fa-sync-alt.fa-7x.mr-3.fa-spin
                  i.fas.fa-mobile-alt.fa-10x
                .carousel-caption
                  h5 Establishing a connection with your agent
                  p Please accept any connection offer.
              .carousel-item
                .d-block.w-100.item-padding.text-primary
                  i.fas.fa-id-card.fa-10x.mr-3
                  i.fas.fa-redo-alt.fa-7x.mr-3.fa-spin
                  i.fas.fa-mobile-alt.fa-10x
                .carousel-caption
                  h5 Delivering your account credential
                  p Please accept the credential offer.
              .carousel-item
                .d-block.w-100.item-padding.text-success
                  i.fas.fa-check.fa-10x
                .carousel-caption.text-success
                  h5 All done!
                  p Your account ownership credential has been delivered to your wallet.
              .carousel-item
                .d-block.w-100.item-padding.text-danger
                .carousel-caption.text-danger
                  i.fas.fa-exclamation-circle.fa-10x
                  h5 Oh no!
                  p Please refresh the page and try again.
                  p#errorCode
                  p#errorMessage
              .carousel-item
                .d-block.w-100.item-padding.text-danger
                  i.fas.fa-exclamation-circle.fa-10x
                .carousel-caption.text-danger
                  h5 Issuance Canceled
                  p Refresh the page to start over.

block scripts
  script(src="/javascripts/qrcode.min.js")
  script(src="/javascripts/connect_with_dmv.js")
